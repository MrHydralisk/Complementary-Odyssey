	<ThingDef ParentName="BuildingBase">
		<defName>CO_VacBarrierProjector</defName>
		<label>vac barrier projector</label>
		<description>This device projects an ultrasonic barrier onto a special roof that can maintain a vac barrier over a large-area. This prevents depressurization and protects against weather and temperature changes while still allowing light and objects to pass through. Can project on up to 16 vac roof.</description>
		<graphicData>
			<drawSize>1.3</drawSize>
			<texPath>Things/Building/CO_VacRoof/CO_VacBarrierProjector</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<shadowData>
				<volume>(0.26, 0.5, 0.9)</volume>
			</shadowData>
			<damageData>
				<rect>(0.37,0.05,0.26,0.9)</rect>
			</damageData>
		</graphicData>
		<defaultPlacingRot>South</defaultPlacingRot>
		<designationCategory>Odyssey</designationCategory>
		<uiOrder>2016</uiOrder>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.25</fillPercent>
		<pathCost>0</pathCost>
		<uiIconScale>1</uiIconScale>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>7200</WorkToBuild>
			<Mass>6</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<costList>
			<Steel>90</Steel>
			<BlocksVacstone>20</BlocksVacstone>
			<ComponentSpacer>1</ComponentSpacer>
			<GravlitePanel>8</GravlitePanel>
		</costList>
		<canOverlapZones>false</canOverlapZones>
		<rotatable>true</rotatable>
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
			<paintable>true</paintable>
		</building>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<minifiedDef>MinifiedThing</minifiedDef>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<placeWorkers>
			<li>ComplementaryOdyssey.PlaceWorker_VacBarrierProjector</li>
		</placeWorkers>
		<comps>
			<li Class="ComplementaryOdyssey.CompProperties_VacBarrierProjector">
				<basePowerConsumption>50</basePowerConsumption>
				<maxBarrierSize>(5, 5)</maxBarrierSize>
				<maxBarrierOffset>(0, -4, 1)</maxBarrierOffset>
				<initialBarrierSize>(5, 3)</initialBarrierSize>
				<initialBarrierOffset>(-2, 1)</initialBarrierOffset>
				<maxArea>16</maxArea>
			</li>
      <li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Stunnable">
				<useLargeEMPEffecter>true</useLargeEMPEffecter>
				<empChancePerTick>0.03</empChancePerTick>
				<affectedDamageDefs>
					<li>EMP</li>
				</affectedDamageDefs>
			</li>
		</comps>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
