<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef Name="COVacDoor" ParentName="DoorBase" Abstract="True">
		<thingClass>ComplementaryOdyssey.Building_VacDoor</thingClass>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<defaultStuff>Steel</defaultStuff>
		<useStuffTerrainAffordance>false</useStuffTerrainAffordance>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<useBlueprintGraphicAsGhost>true</useBlueprintGraphicAsGhost>
		<designationCategory>Odyssey</designationCategory>
		<building>
			<isAirtight>true</isAirtight>
			<isSupportDoor>true</isSupportDoor>
			<doorTopHorizontalOffset>(0,0,0)</doorTopHorizontalOffset>
			<blueprintClass>Blueprint_Door</blueprintClass>
		</building>
		<researchPrerequisites>
			<li>Autodoors</li>
			<li>OrbitalTech</li>
			<li>AdvancedGravtech</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		<comps>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<uiOrder>2015</uiOrder>
		<building>
			<isStuffableAirtight>true</isStuffableAirtight>
		</building>
	</ThingDef>

	<ThingDef ParentName="COVacDoor">
		<defName>CO_VacDoor</defName>
		<label>vac door</label>
		<description>A strong, airtight door that prevents oxygen leaks in the vacuum of space. It's equipped with an ultrasonic barrier that prevents depressurization. The field compresses air molecules near the threshold, preventing gases from escaping while allowing people to freely travel through it.\n\nThe door must be powered to prevent depressurization when it's open. Powered operation also allows people to move through the door without slowing down.</description>
		<statBases>
			<WorkToBuild>3500</WorkToBuild>
			<MaxHitPoints>230</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Building/CO_VacDoor/CO_VacDoor_Mover</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<damageData>
				<enabled>false</enabled>
			</damageData>
			<attachments>
				<li>
					<texPath>Things/Building/CO_VacDoor/CO_VacDoor_Barrier</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>1.5</drawSize>
					<drawOffset>(0,-0.03658537,0)</drawOffset>
					<shaderType>TransparentPostLight</shaderType>
					<damageData>
						<enabled>false</enabled>
					</damageData>
					<color>(0,185,252)</color>
				</li>
			</attachments>
		</graphicData>
		<uiIconPath>Things/Building/CO_VacDoor/CO_VacDoor_MenuIcon</uiIconPath>
		<costList>
			<Steel>80</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
			<GravlitePanel>2</GravlitePanel>
		</costList>
		<costStuffCount>35</costStuffCount>
		<building>
			<doorTopGraphic>
				<texPath>Things/Building/CO_VacDoor/CO_VacDoor_Top</texPath>
				<graphicClass>Graphic_Multi</graphicClass>
				<drawSize>1.5</drawSize>
			</doorTopGraphic>
			<blueprintGraphicData>
				<texPath>Things/Building/CO_VacDoor/CO_VacDoor_Top_south</texPath>
				<graphicClass>Graphic_Multi</graphicClass>
				<shaderType>EdgeDetect</shaderType>
				<drawSize>1.5</drawSize>
			</blueprintGraphicData>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
			</li>
			<li Class="CompProperties_LowPowerUnlessVacuum">
				<lowPowerConsumptionFactor>0.55</lowPowerConsumptionFactor>
				<checkRoomVacuum>false</checkRoomVacuum>
			</li>
		</comps>
	</ThingDef>

