<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>CO_VacRoofFraming</defName>
		<label>vac roof</label>
		<description>Roofing with a frame for maintaining an ultrasonic barrier. When the vac barrier is projected, it prevents oxygen from leaking into the vacuum of space. Without the projection, it's equivalent to having no roof.\n\nThe roof must be projected with a powered vac barrier projector to prevent depressurization. This also allows light and objects to move through while preventing weather effects and temperature changes.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/CO_VacRoof/CO_VacRoofFrame</texPath>
			<damageData>
				<enabled>false</enabled>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/CO_VacRoof/CO_VacRoof</uiIconPath>
		<uiIconScale>0.7</uiIconScale>
		<designationCategory>Odyssey</designationCategory>
		<uiOrder>2016</uiOrder>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<rotatable>false</rotatable>
		<altitudeLayer>Blueprint</altitudeLayer>
		<drawStyleCategory>Floors</drawStyleCategory>
		<passability>Standable</passability>
		<blockWind>false</blockWind>
		<fillPercent>0</fillPercent>
		<coversFloor>false</coversFloor>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<statBases>
			<WorkToBuild>1250</WorkToBuild>
		</statBases>
		<costList>
			<GravlitePanel>1</GravlitePanel>
			<Plasteel>4</Plasteel>
			<BlocksVacstone>10</BlocksVacstone>
		</costList>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
			<canPlaceOverWall>true</canPlaceOverWall>
			<isEdifice>false</isEdifice>
			<blueprintGraphicData>
				<texPath>Things/Building/CO_VacRoof/CO_VacRoofFrame</texPath>
			</blueprintGraphicData>
		</building>
		<resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
		<tickerType>Normal</tickerType>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<clearBuildingArea>false</clearBuildingArea>
		<canOverlapZones>true</canOverlapZones>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="ComplementaryOdyssey.CompProperties_VacRoofBlueprint">
				<roofDef>CO_VacRoof</roofDef>
			</li>
		</comps>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
		<researchPrerequisites>
			<li>OrbitalTech</li>
			<li>AdvancedGravtech</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>CO_RoofRetractor</defName>
		<label>roof retractor</label>
		<description>An extendable lightweight bridge. Can deploy extendable bridge tiles in one direction and pack them back, when needed. Can extend up to 15 bridge tiles.</description>
		<graphicData>
			<texPath>Things/Building/CO_RoofRetractor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawOffset>(0,0,0.17)</drawOffset>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<WorkToBuild>2500</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<drawerType>MapMeshOnly</drawerType>
		<tickerType>Normal</tickerType>
		<canOverlapZones>true</canOverlapZones>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<fillPercent>0.05</fillPercent>
		<costList>
			<Steel>30</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
			<isPlaceOverableWall>true</isPlaceOverableWall>
			<isTargetable>false</isTargetable>
			<isInert>true</isInert>
			<isEdifice>false</isEdifice>
			<paintable>true</paintable>
		</building>
		<comps>
			<li Class="ComplementaryOdyssey.CompProperties_RoofRetractor">
				<ticksPerDeploy>150</ticksPerDeploy>
				<ticksPerPacking>100</ticksPerPacking>
				<Borders>(1, 15)</Borders>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>15</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Stunnable">
				<useLargeEMPEffecter>true</useLargeEMPEffecter>
				<empChancePerTick>0.03</empChancePerTick>
				<affectedDamageDefs>
					<li>EMP</li>
				</affectedDamageDefs>
			</li>
		</comps>
		<pathCost>0</pathCost>
		<designationCategory>Odyssey</designationCategory>
		<uiOrder>1000</uiOrder>
		<placeWorkers>
			<li>ComplementaryOdyssey.PlaceWorker_RoofRetractor</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>StandardGravtech</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>
	
</Defs>