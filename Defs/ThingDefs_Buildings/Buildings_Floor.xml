<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>CO_ExtBridge</defName>
		<label>extendable bridge</label>
		<description>An extendable lightweight bridge. Can deploy extendable bridge tiles in one direction and pack them back, when needed. Can extend up to 15 bridge tiles.</description>
		<graphicData>
			<texPath>Things/Building/CO_ExtBridge/CO_ExtBridge</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<statBases>
			<MaxHitPoints>210</MaxHitPoints>
			<WorkToBuild>9000</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<drawerType>MapMeshOnly</drawerType>
		<tickerType>Normal</tickerType>
		<canOverlapZones>true</canOverlapZones>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<fillPercent>0.05</fillPercent>
		<costList>
			<Steel>60</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
			<GravlitePanel>15</GravlitePanel>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
			<isTargetable>false</isTargetable>
			<isInert>true</isInert>
			<isEdifice>false</isEdifice>
			<paintable>true</paintable>
		</building>
		<comps>
			<li Class="ComplementaryOdyssey.CompProperties_ExtBridge">
				<ticksPerDeploy>300</ticksPerDeploy>
				<ticksPerPacking>200</ticksPerPacking>
				<maxDeploy>15</maxDeploy>
				<deployableTerrain>CO_ExtBridgeTile</deployableTerrain>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>120</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Stunnable">
				<useLargeEMPEffecter>true</useLargeEMPEffecter>
				<empChancePerTick>0.03</empChancePerTick>
				<affectedDamageDefs>
					<li>EMP</li>
				</affectedDamageDefs>
			</li>
		</comps>
		<pathCost>0</pathCost>
		<designationCategory>Odyssey</designationCategory>
		<uiOrder>1000</uiOrder>
		<placeWorkers>
			<li>ComplementaryOdyssey.PlaceWorker_ExtBridge</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>HeavyBridges</li>
			<li>StandardGravtech</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>CO_CompressedHay</defName>
		<label>compressed hay</label>
		<description>Will lay down hay and compress it. It will decompose over time into new artificial soil.</description>
		<graphicData>
			<texPath>Things/Building/CO_SubSoil</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<drawStyleCategory>Floors</drawStyleCategory>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>5000</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<drawerType>MapMeshOnly</drawerType>
		<tickerType>Normal</tickerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<fillPercent>0.05</fillPercent>
		<costList>
			<Steel>2</Steel>
			<Hay>18</Hay>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
			<isTargetable>false</isTargetable>
		</building>
		<comps>
			<li Class="ComplementaryOdyssey.CompProperties_CompressedSoil">
				<terrainDef>CO_SubSoil</terrainDef>
				<ticksPerCompression>300000</ticksPerCompression>
			</li>
		</comps>
		<pathCost>2</pathCost>
		<designationCategory>Floors</designationCategory>
		<uiOrder>2011</uiOrder>
		<researchPrerequisites>
			<li>Hydroponics</li>
			<li>MoisturePump</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	</ThingDef>

</Defs>
