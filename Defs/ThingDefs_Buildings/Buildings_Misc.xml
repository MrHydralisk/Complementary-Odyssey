<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>CO_TerrainScanner</defName>
		<label>terrain scanner</label>
		<description>An array of sensors used by researchers to detect to determine the location of minerals within nearby rock formations. The time to scan entire region depends on the operator's research ability. If you find a resource, you'll need to mine through rocks to reach it.</description>
		<graphicData>
			<texPath>Things/Building/CO_TerrainScanner</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>2</drawSize>
			<drawRotated>false</drawRotated>
			<shadowData>
				<volume>(1.32, 0.375, 1.74)</volume>
			</shadowData>
		</graphicData>
		<costList>
			<Steel>100</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
		</building>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>300</basePowerConsumption>
			</li>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Flickable"/>
			<li Class="ComplementaryOdyssey.CompProperties_TerrainScanner">
				<scanSpeedStat>ResearchSpeed</scanSpeedStat>
				<ticksPerScan>60</ticksPerScan>
				<tilesPerScan>40</tilesPerScan>
				<soundWorking>ScannerGroundPenetrating_Ambience</soundWorking>
			</li>
		</comps>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToBuild>8000</WorkToBuild>
			<Flammability>0.5</Flammability>
			<Beauty>-8</Beauty>
			<Mass>75</Mass>
		</statBases>
		<hasInteractionCell>true</hasInteractionCell>
		<interactionCellOffset>(0,0,2)</interactionCellOffset>
		<interactionCellIcon>DiningChair</interactionCellIcon>
		<interactionCellIconReverse>true</interactionCellIconReverse>
		<fillPercent>0.40</fillPercent>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<designationCategory>Misc</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<rotatable>true</rotatable>
		<canOverlapZones>false</canOverlapZones>
		<size>(2,2)</size>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<placeWorkers>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<defaultPlacingRot>South</defaultPlacingRot>
		<researchPrerequisites>
			<li>GroundPenetratingScanner</li>
			<li>LongRangeMineralScanner</li>
			<li>StandardGravtech</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
	</ThingDef>
	
</Defs>