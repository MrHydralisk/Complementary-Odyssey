<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>CO_SolarArrayGenerator</defName>
		<label>roll out solar array</label>
		<description>A small wall-mounted device that produces electricity from sunlight. Can deploy roll out solar array panels and pack them back, when needed. Does not work in the dark or under artificial light. Have higher efficiency in orbit.</description>
		<thingClass>Building</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/CO_SolarArrayGenerator/CO_SolarArrayGenerator</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawOffsetNorth>(0,0,0.78)</drawOffsetNorth>
			<drawOffsetSouth>(0,0,-0.41)</drawOffsetSouth>
			<drawOffsetWest>(-0.61,0,0)</drawOffsetWest>
			<drawOffsetEast>(0.61,0,0)</drawOffsetEast>
			<damageData>
				<enabled>false</enabled>
			</damageData>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<passability>Standable</passability>
		<pathCost>0</pathCost>
		<fillPercent>0.5</fillPercent>
		<canOverlapZones>true</canOverlapZones>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToBuild>4500</WorkToBuild>
			<Flammability>0</Flammability>
			<Mass>15</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsPower</li>
		</thingCategories>
		<building>
			<isEdifice>false</isEdifice>
			<isAttachment>true</isAttachment>
			<expandHomeArea>false</expandHomeArea>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
		</building>
		<costList>
			<Steel>150</Steel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<comps>
			<li Class="ComplementaryOdyssey.CompProperties_PowerPlantDeployable">
				<compClass>ComplementaryOdyssey.CompPowerPlantSolarArray</compClass>
				<basePowerConsumption>-1700</basePowerConsumption>
				<ticksPerDeploy>50</ticksPerDeploy>
				<ticksPerPacking>25</ticksPerPacking>
				<powerOutputVacMult>1.4</powerOutputVacMult>
				<transmitsPower>true</transmitsPower>
				<powerBarOffsetNorth>(0,0.1,0.985)</powerBarOffsetNorth>
				<powerBarOffsetEast>(0.815,0.1,0)</powerBarOffsetEast>
				<powerBarOffsetSouth>(0,0.1,-0.615)</powerBarOffsetSouth>
				<powerBarOffsetWest>(-0.815,0.1,0)</powerBarOffsetWest>
				<powerBarSize>(0.45,0.05)</powerBarSize>
				<powerBarMargin>0.05</powerBarMargin>
				<zoneSize>(3,5)</zoneSize>
				<zoneOffset>(-1,0,-4)</zoneOffset>
				<zoneAdditionalTiles>
					<li>(0,0,-5)</li>
				</zoneAdditionalTiles>
				<deployableThing>CO_SolarArrayPanel</deployableThing>
			</li>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Stunnable">
				<useLargeEMPEffecter>true</useLargeEMPEffecter>
				<empChancePerTick>0.03</empChancePerTick>
				<affectedDamageDefs>
					<li>EMP</li>
				</affectedDamageDefs>
			</li>
		</comps>
		<terrainAffordanceNeeded IsNull="True"/>
		<designationCategory>Power</designationCategory>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<building>
			<canPlaceOverWall>true</canPlaceOverWall>
			<uninstallWork>5000</uninstallWork>
		</building>
		<placeWorkers>
			<li>Placeworker_AttachedToWall</li>
			<li>ComplementaryOdyssey.PlaceWorker_PowerPlantDeployable</li>
		</placeWorkers>
		<uiOrder>2100</uiOrder>
		<constructEffect>ConstructMetal</constructEffect>
		<researchPrerequisites>
			<li>SolarPanels</li>
			<li>StandardGravtech</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>CO_SolarArrayPanel</defName>
		<label>roll out solar panel</label>
		<description>Produces electricity from sunlight. It can be deployed from roll out solar array. Does not work in the dark or under artificial light. It have higher efficiency in orbit.</description>
		<thingClass>ComplementaryOdyssey.Building_SolarArrayPanel</thingClass>
		<drawerType>MapMeshOnly</drawerType>
		<graphicData>
			<texPath>Things/Building/CO_SolarArrayGenerator/CO_SolarArrayPanel_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
			<drawOffset>(0,0.03658537,0)</drawOffset>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom1</li>
			</linkFlags>
			<shadowData>
				<volume>(0.78,0.2,0.78)</volume>
			</shadowData>
			<damageData>
				<rect>(0.11,0.11,0.78,0.78)</rect>
			</damageData>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<passability>Standable</passability>
		<pathCost>0</pathCost>
		<fillPercent>0.25</fillPercent>
		<canOverlapZones>true</canOverlapZones>
		<statBases>
			<MaxHitPoints>20</MaxHitPoints>
			<WorkToBuild>500</WorkToBuild>
			<Flammability>0.7</Flammability>
		</statBases>
		<tickerType>Never</tickerType>
		<building>
			<expandHomeArea>false</expandHomeArea>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
		</building>
		<terrainAffordanceNeeded IsNull="True"/>
	</ThingDef>

</Defs>
